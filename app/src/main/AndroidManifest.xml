<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cf.ericrocha.philanthropicmanager">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".members"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme"/>
        <activity android:name=".document_types"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme"/>
        <activity
            android:name=".document_home"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".general_settings"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".user_preference"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".Settings"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".new_user"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".documents"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".philanthropies"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".works"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".Calendar"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".financial"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>