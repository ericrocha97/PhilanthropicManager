<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cf.ericrocha.philanthropicmanager">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".activity.new_financial"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme"/>
        <activity
            android:name=".activity.members"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".activity.user_preference"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".activity.Settings"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".activity.new_user"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".activity.philanthropies"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".activity.works"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".activity.Calendar"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".activity.financial"
            android:screenOrientation="portrait"
            android:theme="@style/FinancialTheme" />
        <activity
            android:name=".activity.Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>